{
  "installCommand": "pnpm install --no-frozen-lockfile",
  "buildCommand": "npx prisma generate --schema=apps/server/prisma/schema.prisma && npm run build:server && mkdir -p apps/server/dist/client/dash && echo '<!DOCTYPE html><html><head><meta charset=\"UTF-8\"><title>WeWe RSS</title></head><body><h1>WeWe RSS 服务</h1><p>API服务已启动</p></body></html>' > apps/server/dist/client/dash/index.html",
  "outputDirectory": "apps/server/dist",
  "rewrites": [
    { "source": "/dash/(.*)", "destination": "/client/dash/$1" },
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/feeds/(.*)", "destination": "/api/feeds/$1" },
    { "source": "/healthz", "destination": "/api/healthz" },
    { "source": "/(.*)", "destination": "/api" }
  ],
  "framework": null,
  "env": {
    "SKIP_TS_CHECK": "true",
    "TS_NODE_TRANSPILE_ONLY": "true",
    "NODE_ENV": "production",
    "PRISMA_SCHEMA_DISABLE_ADVISORY_LOCK": "true"
  }
} 